doctype html
html
  head
    title Главная
    include modules/head.jade
  body
    //- Modals
    div(class="modal fade" id="modal-consultation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
      div(class="modal-dialog" role="document")
        .modal-content
          .modal-header
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
            h4(class="modal-title" id="myModalLabel") Modal title

          .modal-body modal body
          .modal-footer
            button(type="button" class="btn btn-default" data-dismiss="modal") Close
            button(type="button" class="btn btn-primary") Save changes

    //- Fixed menu
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar").navbar-toggle.collapsed.pull-left
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(href="#").navbar-brand Gelios Park
          .consultation
            p.small-hidden Есть вопросы? Мы с радостью вам поможем!
            button(type="button" class="btn" data-toggle="modal" data-target="#modal-consultation")
              span.small-hidden Получите бесплатную консультацию
              span.large-hidden Бесплатная консультация
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a(href="#") Home
            li: a(href="#") About
    //- Begin content
    .container text

    //- Footer
    footer.footer
      .container
        .row
          .col-xs-6.col-sm-6.col-md-3
            p © 2016 «Gelios Park»<br/>Все права защищены
          .col-xs-6.col-sm-6.col-md-3 socials
          .col-xs-12.col-sm-6.col-md-6 menu

    // JS
    script(src="../scripts/plugins.js")
    script(src="../scripts/app.js")
