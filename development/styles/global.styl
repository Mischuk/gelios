//======================================//

clearfix()
  &:before
  &:after
    content ''
    display table
    clear both

anim()
  transition all 0.25s ease-out

smooth()
  -webkit-transform translate3d(0, 0, 0)
  -webkit-backface-visibility hidden
  -webkit-perspective 1000

font(fz, lh)
  font-size fz
  line-height lh

gutter()
  padding $base-mb-small 0
  @media screen and (min-width: 1200px)
    padding $base-mb 0
//======================================//

$min-width = 960px
$footer-height = 100px
$footer-margin-top = 50px
$base-mb = 50px
$base-mb-small = 35px

base-fz = 16px
base-lh = 1.2
base-bg = #fff
base-color = #000

fw100()
  font-family "MuseoSansLight"
fw300()
  font-family "MuseoSansRegular"
fw500()
  font-family "MuseoSansMedium"
fw700()
  font-family "MuseoSansBold"
fw900()
  font-family "MuseoSansBlack"

$sky = #05b9ff
$blue = #005a7d
$gray = #ccc
$link-border = rgba(0, 90, 125, 0.3)
$text-gray = #646464
$bg-gray = #f5f2eb
