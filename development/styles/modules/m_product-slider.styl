.m_product
  position relative
  .lSAction a
    position absolute
    width 40px
    height 40px
    background $blue
    opacity .8
    border none
    text-indent -9999px
    top 130px
    z-index 2
    @media screen and (min-width: 1200px)
      display none
    &:hover, &:focus
      opacity 1
    &:before
      content ""
      position absolute
      left 50%
      top 50%
      width 17px
      height 30px
      margin-top -(@height/2)
      margin-left -(@width/2)
      background-repeat no-repeat
      background-image url('../images/sprite.png')
    &.lSNext
      right -40px
      @media screen and (max-width: 1260px)
        right -15px
      @media screen and (max-width: 1200px)
        right 0
      &:before
        background-position -205px -112px
    &.lSPrev
      left -40px
      @media screen and (max-width: 1260px)
        left -15px
      @media screen and (max-width: 1200px)
        left 0
      &:before
        background-position -179px -112px

.lSSlideWrapper
  position relative
  width 100%
  border 1px solid $gray
  height 300px
  line-height 300px
  overflow hidden
  text-align center
  margin-bottom 10px !important
  @media screen and (min-width: 1200px)
    height 400px
    line-height 400px
  li
    img
      display inline-block
      vertical-align middle
      max-width 100%
      max-height 100%
.lSPager
  margin-top 0
  li
    border 1px solid $gray
    border-radius 0 !important
    &.active
      border-color $sky
  img
    max-width 100% !important
    height 60px !important
    width 100% !important
    @media screen and (min-width: 1200px)
      height 70px !important
  .thumb
    position relative
    &.slick-current:after
      border-color $sky
    &:after
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      border 1px solid $gray
      background none
