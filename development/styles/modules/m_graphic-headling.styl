.m_graphic-headling
  width 80%
  .border
    position relative
    padding 60px 0
    border-top 10px solid $blue
    border-bottom 10px solid $blue
    border-left 10px solid $blue
    &:after,
    &:before
      content ''
      position absolute
      right 0
      width 10px
      height 40px
      background $blue
    &:before
      top -1px
    &:after
      bottom -1px
  .wrap
    text-align right
  .title
    fw700()
    position relative
    right -20px
    display inline-block
    text-align left
    margin-bottom 10px
    color #000
    font-size 35px
    padding-bottom 20px
    @media screen and (min-width: 992px)
      right -25px
      font-size 50px
    @media screen and (min-width: 1200px)
      right -40px
    &:after
      content ''
      position absolute
      left 0
      bottom 0
      height 5px
      width 100%
      background $sky