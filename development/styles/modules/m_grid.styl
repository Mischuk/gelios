/*!=========================
      Base grid styles
==========================*/
html
  position relative
  min-height 100%
body
  font-size base-fz
  line-height base-lh
  color base-color
  background base-bg
  margin-bottom 365px
.footer
  position absolute
  bottom 0
  width 100%
  height 320px
  background-color #f5f5f5
body > .container
  padding 60px 15px 0
.footer .container
  padding-right 15px
  padding-left 15px

.small-hidden
  display none
  @media screen and (min-width: 992px)
    display block
.large-hidden
  display block
  @media screen and (min-width: 992px)
    display none