.m_kp
  position relative
  .wrapper
    clearfix()
    position relative
    max-width 1200px
    padding 0 15px
    height 100%
    width 100%
    margin 0 auto
  .lead
    height 400px
    position relative
    width 100%
    margin-bottom 0
    @media screen and (min-width: 768px)
      height 600px
    .vertical
      display table-cell
      vertical-align middle
    .wrapper
      display table
    .image
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background-position 50%
      background-size cover
      background-repeat no-repeat
    .title,
    .date,
    .mouse
      z-index 1
      position relative
    .title
      color #fff
      text-align center
      fw700()
      font-size 32px
      line-height 1.2
      padding-bottom 60px
      @media screen and (min-width: 480px)
        font-size 36px
      @media screen and (min-width: 768px)
        font-size 42px
      @media screen and (min-width: 992px)
        font-size 48px
    .date
      position absolute
      left 0
      width 100%
      text-align center
      bottom 60px
      color #fff
    .mouse
      position absolute
      left 50%
      bottom 15px
      width 20px
      height 31px
      margin-left -(@width/2)
      background url("../images/kp/mouse.png") no-repeat 0 0
      cursor pointer
      user-select none
      anim()
      &:hover
        opacity .8
  section
    display block
    padding 20px 0
    color #646464
    font-size 20px
    line-height 30px
    border-bottom 1px solid #dcdcdc
    @media screen and (min-width: 768px)
      padding 40px 0
    &:last-child
      border-bottom none
    p
      margin-top 0
      &:last-child
        margin-bottom 0
  .section-title
    text-align center
    h2
      fw700()
      font-size 28px
      padding-bottom 0.5em
      margin-bottom 0.6em
      color #000
      @media screen and (min-width: 480px)
        font-size 32px
      @media screen and (min-width: 768px)
        font-size 36px
      &.border
        position relative
        &:after
          content ''
          width 200px
          height 3px
          position absolute
          left 50%
          bottom 0
          margin-left -(@width/2)
          background $sky
  .intro
    p
      text-align center
    .list
      @media screen and (min-width: 768px)
        padding-top 30px
      @media screen and (min-width: 1200px)
        width 1000px
        margin 0 auto
      .item
        clearfix()
        font-size 18px
        line-height 24px
        position relative
        padding-left 115px
        min-height 115px
        display table
        @media screen and (min-width: 768px)
          width 50%
          float left
          padding-right 30px
          margin-bottom 30px
          &:nth-child(2n+1)
            clear left
        & + .item
          margin-top 15px
          @media screen and (min-width: 768px)
            margin-top 0
        p
          text-align left
          vertical-align middle
          display table-cell
        .icon
          width 100px
          height 100px
          border-radius 50%
          background $sky
          line-height 100px
          text-align center
          position absolute
          left 0
          top 50%
          margin-top -(@height/2)
          margin-right 15px
          img
            display inline-block
            vertical-align middle
  .kp-options
    text-align center
    height 50px
    a
      margin 5px 10px
      @media screen and (min-width: 768px)
        width 200px
    .buttons
      transition opacity .5s ease-in, transform .25s ease-in
      margin-top: 0 !important;
      position: fixed;
      bottom 0px
      left 0
      width 100%
      z-index: 10000;
      opacity 0
      transform translateY(80px)
      &.show
        opacity 1
        transform translateY(0px)
        transition opacity .25s ease-in, transform .5s ease-in
      &.stick
        position static
        transform translateY(0px)
  .kp-nav-blank
    background #f5f2eb
  .kp-nav
    transition top .5s ease-in
    background url("../images/backgrounds/reasons-large.jpg") no-repeat 50%
    background-size cover
    top -100%
    &.stick
      @media screen and (min-width: 1200px)
        position fixed
        left 0
        top 0
        width 100%
        z-index 1000
        padding-top 5px
        padding-bottom 10px
        border-bottom none
        .section-title
          display none
    .section-title
      h2
        color #fff
    ul
      text-align center
      margin-top -10px
      @media screen and (min-width: 1200px)
        max-width 80%
        margin 0 auto
      li
        display inline-block
        vertical-align middle
        margin-top 10px
        margin-left 2px
        margin-right 2px
        a
          color #fff
          border 1px solid #fff
          font-size 14px
          line-height 1.1
          fw300()
          anim()
          display inline-block
          vertical-align middle
          border-radius 3px
          padding 10px 15px
          @media screen and (min-width: 768px)
            padding 10px 30px
          &:hover
            background $sky
            border-color $sky
  .expamle-work
    background #f5f2eb
    .m_product
      .lSSlideWrapper
        @media screen and (min-width: 1200px)
          height 490px
      .lSAction
         a
           display block
           @media screen and (min-width: 1200px)
            top 235px
           &.lSPrev
             left 0
           &.lSNext
             right 0
    .details
      background: #fff;
      border-radius: 5px;
      box-shadow: 0 2px 3px rgba(52,51,47,0.3);
      margin-top 15px
      padding 15px
      @media screen and (min-width: 992px)
        padding 30px
        margin-top 30px
      .title
        color #000
        fw700()
        font-size 24px
        margin-bottom 15px
      ul
        li
          font-size 18px
          line-height 1
          @media screen and (min-width: 768px)
            display inline-block
            vertical-align top
            width 49%
            margin-bottom 15px
          @media screen and (min-width: 992px)
            margin-bottom 20px
          & + li
            margin-top 15px
            @media screen and (min-width: 768px)
              margin-top 0
          .d-label
            color #646464
            display block
            padding-bottom 5px
          .d-value
            color #000
            display block
  .responsive-table
    overflow auto
    table
      border-collapse collapse
      border-spacing 0
      text-align center
      width 100%
      min-width 768px
      th
        font-weight normal
        fw700()
        background #fff !important
      td
        padding 15px
      td,
      th
        word-break normal
        overflow hidden
        border-width 1px
        border-style solid
        border-color #dcdcdc
        padding 10px 15px
        font-size 14px
        line-height 1
        color #000
        text-align center
      tr:nth-child(odd)
        td
          background #fafafa
      tr
        &:hover
          td
            background #fafafa - 3%
        td:first-child + td
          text-align left
        &.table-section
          th
            background #f5f2eb !important
            padding 20px
  .tables
    margin 30px 0
    h3
      font-size 18px
      margin-bottom 15px
      fw700()
      color #000
      text-align center
      @media screen and (min-width: 768px)
        font-size 24px
    .devices-total
      background #f5f2eb
      padding 30px
      border 1px solid #e0ded8
      font-size 30px
      color #000
      text-align center
      @media screen and (min-width: 768px)
        font-size 40px
      fw700()
    .devices-table
      margin-bottom 40px
      overflow auto
      table
        background #f5f2eb
        border-collapse collapse
        border-spacing 0
        width 100%
        min-width 768px
        tr
          border 1px solid #e0ded8
          &:hover
            td
              background #f5f2eb - 2%
          td
            padding 20px
            min-width 120px
            max-width 600px
            &:first-child
              a
                width 100px
                height 100px
                background #fff
                display inline-block
                vertical-align middle
                border 1px solid #e0ded8
                line-height 100px
                text-align center
                img
                  display inline-block
                  vertical-align middle
                  max-width 90%
                  max-height 90%
            &:first-child + td
              a
                color #005a7d
                font-size 16px
                line-height 1.2
                border-bottom: 1px solid rgba(0,90,125,0.3);
                @media screen and (min-width: 768px)
                  font-size 18px
                &:hover
                  color #000
                  border-color transparent
            .t-value,
            .t-label
              line-height 1
              font-size 15px
            .t-value
              fw700()
              color #000
              padding-top 5px