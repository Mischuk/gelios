.m_breadcrumbs
  height 50px
  margin-bottom 35px
  background url("../images/backgrounds/reasons-large.jpg") no-repeat 25% 0
  color #fff
  ul
    height 50px
    line-height 50px
    cursor default
    li
      position relative
      display inline-block
      vertical-align middle
      line-height 50px
      height 50px
      margin-right 30px
      &:after
        content ''
        background url('../images/sprite.png') no-repeat -129px -140px
        width 13px
        height 7px
        position absolute
        right -24px
        top 50%
        margin-top -(@height/2)
      &:last-child
        margin-right 0
        &:after
          display none
    a
      color #fff

  ul.normal
    a
      border-bottom 1px solid rgba(255,255,255,.3)
      &:hover
        border-color transparent
  ul.mobile
    height 50px
    a
      position relative
      display inline-block
      font-size 20px
      padding-left 20px
      height 50px
      &:before
        content ''
        position absolute
        left 0
        top 50%
        background url('../images/sprite.png') no-repeat -154px -113px
        width 10px
        height 16px
        margin-top -(@height/2)


