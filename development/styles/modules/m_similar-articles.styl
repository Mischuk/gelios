.m_similar-articles
  position relative
  top 30px
  margin-top -30px
  background $bg-gray
  gutter()
  .headling
    @media screen and (min-width: 992px)
      padding-bottom 15px
    h2
      @media screen and (min-width: 992px)
        font-size 30px
  .similar-carousel
    position relative
    @media screen and (min-width: 360px)
      .slick-slide
        margin 0 10px
      .slick-list
        margin 0 -10px
    .slick-arrow
      position absolute
      width 40px
      height 40px
      background $blue
      opacity .8
      border none
      text-indent -9999px
      top 80px
      z-index 2
      &:hover, &:focus
        opacity 1
      &:before
        content ""
        position absolute
        left 50%
        top 50%
        width 17px
        height 30px
        margin-top -(@height/2)
        margin-left -(@width/2)
        background-repeat no-repeat
        background-image url('../images/sprite.png')
      &.slick-next
        right -40px
        @media screen and (max-width: 1260px)
          right -15px
        @media screen and (max-width: 1200px)
          right 0
        @media screen and (min-width: 1200px)
          right 1px
        &:before
          background-position -205px -112px
      &.slick-prev
        left -40px
        @media screen and (max-width: 1260px)
          left -15px
        @media screen and (max-width: 1200px)
          left 0
        @media screen and (min-width: 1200px)
          left 1px
        &:before
          background-position -179px -112px
    .slide
      border 1px solid #dcdcdc
      &:hover
        border-color $blue
      .image
        height 175px
        a
          position relative
          display block
          width 100%
          height 100%
          background-repeat no-repeat
          background-size cover
          background-position 50%
          &:after
            anim()
            content ''
            position absolute
            left 0
            top 0
            width 100%
            height 100%
            background #005b7f
            opacity .1
          &:hover
            &:after
              opacity .5
      .desc
        background #fff
        padding 15px
        @media screen and (min-width: 992px)
          padding 20px
        .title
          a
            color $blue
            fw500()
            border-bottom: 1px solid rgba(0,90,125,0.3);
            font-size 16px
            line-height 26px
            &:hover
              color #000
              border-color transparent