.m_free-brochure
  padding-left 70px
  .border
    position relative
    padding 60px 0
    border-top 10px solid $blue
    border-bottom 10px solid $blue
    border-right 10px solid $blue
    &:after,
    &:before
      content ''
      position absolute
      left 0
      width 10px
      height 40px
      background $blue
    &:before
      top -1px
    &:after
      bottom -1px
  .wrap
    margin-left -35px
  .small-title
    fw300()
    color $text-gray
    font-size 16px
  .title
    fw900()
    margin-bottom 10px
    color $blue
    font-size 30px