.m_product-item
  border 1px solid $gray
  border-radius 4px
  overflow hidden
  margin-bottom 30px
  .image
    width 100%
    height 240px
    line-height 240px
    margin-bottom 15px
    border-bottom 1px solid $gray
    @media screen and (min-width: 768px)
      height 179px
      line-height 179px
    a
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position center bottom
      background-size cover
      text-align center
      overflow hidden
      img
        display inline-block
        vertical-align middle
        max-width 100%
        max-height 100%
  .title
    margin-bottom 15px
    a
      fw500()
      font-size 20px
      border-bottom 1px solid $link-border
      color $blue
      &:hover, &:focus
        border-color transparent
  .description
    fw300()
    margin-bottom 20px
    font-size 15px
    color $text-gray
  .detail
    margin-bottom 15px
  .title, .description, .detail
    padding-left 15px
    padding-right 15px
