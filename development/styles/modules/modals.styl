#modal-free,
#modal-consultation,
#modal-project
  .modal-dialog
    border-radius 0
    @media screen and (max-width: 568px)
      margin 0
    @media screen and (min-width: 992px)
      width 770px
    .modal-content
      border-radius 0
      border 10px solid $blue
      box-shadow none
      @media screen and (max-width: 568px)
        border none
    .modal-header
      border none
      padding-bottom 0
      padding-top 40px
      padding-left 50px
      padding-right 50px
      @media screen and (max-width: 568px)
        padding-left 10px
        padding-right 10px
        padding-top 20px
      .close
        margin-top -30px
        margin-right -40px
        background: url('../images/sprite.png') no-repeat -129px -113px;
        width: 16px;
        height: 16px;
        opacity 1
        @media screen and (max-width: 568px)
          margin-top -10px
          margin-right 0
        span
          font-size 0
          display none
    .modal-body
      padding-top 0
      padding-left 50px
      padding-right 50px
      @media screen and (max-width: 568px)
        padding-left 10px
        padding-right 10px
    .form-row
      position relative
      height 44px
      width 100%
      margin-bottom 20px
      &.area
        height 100px
      &:last-child
        margin-bottom 0
      label
        transition transform .25s ease-out
        fw300()
        position absolute
        cursor text
        left 0
        top 0
        width 100%
        font-weight normal
        color #646464
        font-size 15px
        line-height 44px
        padding-left 15px
        margin-bottom 0
        background none
        transform translateY(0)
        &.focus
          transition transform .25s ease-out
          background $sky
          font-size 12px
          line-height 16px
          color #fff
          transform translateY(-16px)
          left 0
          padding-left 5px
          padding-right 5px
          width auto
      input, textarea
        fw300()
        color #000
        font-size 18px
        &:focus
          border-color $sky
          position relative
          z-index 30
          background #fff
      input
        width 100%
        height 100%
        border 1px solid $gray
        padding-left 15px
        padding-right 15px
      textarea
        width 100%
        border 1px solid $gray
        height 100px
        padding-left 15px
        padding-right 15px
        padding-top 5px
        padding-bottom 5px
        resize none
    .captcha
      input
        display inline-block
        width 75%
        @media screen and (min-width: 1200px)
          width 40%
      .image
        display inline-block
        width 15%
        padding-left 10px
        @media screen and (min-width: 1200px)
          width 20%
          padding-left 20px
    .project-details
      @media screen and (min-width: 992px)
        clearfix()
        padding-bottom 30px
      .image
        @media screen and (min-width: 992px)
          float left
          width 270px
          margin-right 15px
        a
          display block
        img
          width 100%
      .desc
        padding 15px 0 30px
        @media screen and (min-width: 992px)
          padding-top 0
        span
          display block
          color #646464
          font-size 16px
          padding-bottom 5px
        .title
          a
            color $blue
            fw700()
            anim()
            border-bottom: 1px solid rgba(0,90,125,0.3);
            @media screen and (min-width: 992px)
              font-size 20px
            &:hover
              color #000
              border-color transparent
    input[type="submit"]
      color #fff
      border none
      height 44px
      line-height 44px
      width 200px
    form
      padding-bottom 35px
      @media screen and (max-width: 568px)
        padding-bottom 7px