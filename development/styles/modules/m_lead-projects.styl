.m_lead-projects
  gutter()
  background #fff
  .large, .small
    margin-bottom 20px
    @media screen and (min-width: 768px)
      margin-bottom 0
    a
      position relative
      display block
      width 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
      overflow hidden
      &:before
        anim()
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background $blue
        opacity 0
        transform scale(1.5)
      &:after
        fw500()
        anim()
        content "+"
        position absolute
        left 50%
        top 50%
        width 55px
        height 55px
        line-height 47px
        text-align center
        border-radius 50%
        border 3px solid #fff
        margin-left -(@width/2)
        margin-top -(@height/2)
        font-size 42px
        color #fff
        opacity 0
        transform scale(0.5)
      &:hover, &:focus
        &:before
          opacity 0.6
          transform scale(1)
        &:after
          opacity 1
          transform scale(1)

  .large
    a
      height 360px
  .small
    @media screen and (min-width: 768px)
      margin-bottom 39px
    a
      height 160px
  @media screen and (min-width: 768px)
    .col-sm-4:last-child .col-sm-12:last-child .small
      margin-bottom 0

