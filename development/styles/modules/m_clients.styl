.m_clients
  position relative
  top 30px
  margin-top -30px
  background $bg-gray
  gutter()
  .col-xs-12
    padding-left 0
    padding-right 0
  .clients-carousel
    position relative
    .slick-arrow
      position absolute
      width 40px
      height 40px
      background $blue
      opacity .8
      border none
      text-indent -9999px
      top 130px
      z-index 2
      &:hover, &:focus
        opacity 1
      &:before
        content ""
        position absolute
        left 50%
        top 50%
        width 17px
        height 30px
        margin-top -(@height/2)
        margin-left -(@width/2)
        background-repeat no-repeat
        background-image url('../images/sprite.png')
      &.slick-next
        right -40px
        @media screen and (max-width: 1260px)
          right -15px
        @media screen and (max-width: 1200px)
          right 0
        &:before
          background-position -205px -112px
      &.slick-prev
        left -40px
        @media screen and (max-width: 1260px)
          left -15px
        @media screen and (max-width: 1200px)
          left 0
        &:before
          background-position -179px -112px

    .slide
      padding-left 15px
      padding-right 15px
      .image
        height 310px
        width 100%
        margin-bottom 20px
        @media screen and (min-width: 1200px)
          height 370px
        a
          display block
          width 100%
          height 100%
          background-repeat no-repeat
          background-position top center
          background-size cover
      .name
        fw500()
        margin-bottom 15px
        font-size 16px
      .message
        margin-bottom 15px
        font-size 15px
        color #3c3c3c
      .from
        color #646464
        font-size 14px
        span
          fw700()
          display block
          margin-bottom 5px
          font-size 15px