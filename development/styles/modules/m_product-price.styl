.m_product-price
  position relative
  text-align left
  border-top 1px solid $gray
  padding-top 1em
  .price
    position relative
    fw700()
    display inline-block
    vertical-align middle
    padding-left 55px
    font-size 36px
    color #000
    &:before
      content ''
      background: url('../images/sprite.png') no-repeat -311px -113px;
      width: 40px;
      height: 31px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)
    .val
      color $text-gray
