.m_service-item
  .image
    width 100%
    height 145px
    margin-bottom 20px
    a
      display block
      width 100%
      height 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
  .title
    margin-bottom 20px
    a
      fw500()
      font-size 20px
      border-bottom 1px solid $link-border
      color $blue
      &:hover, &:focus
        border-color transparent
  .description
    fw300()
    margin-bottom 20px
    font-size 15px
    color $text-gray
  .detail
    margin-bottom 30px
